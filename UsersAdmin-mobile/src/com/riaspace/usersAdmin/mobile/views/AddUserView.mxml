<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="Add User" 
		xmlns:presentation="com.riaspace.usersAdmin.mobile.models.presentation.*">

	<fx:Declarations>
		<presentation:AddUserPM id="model" />
	</fx:Declarations>
	
	<s:Form verticalCenter="0" horizontalCenter="0">
		<s:FormItem label="Name:">
			<s:TextInput id="txtName" text="@{model.user.name}" width="280" />
		</s:FormItem>
		<s:FormItem>
			<s:Button id="btnCreate" label="Create" click="model.btnCreate_clickHandler()" />
		</s:FormItem>
	</s:Form>
	
</s:View>
