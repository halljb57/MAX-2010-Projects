<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="Users List" xmlns:presentation="com.riaspace.usersAdmin.mobile.models.presentation.*">

	<s:actionContent>
		<s:Button id="btnAddUser" label="Add User" click="model.btnAddUser_clickHandler()" />
		<s:Button id="btnRefresh" label="Refresh" click="model.btnRefresh_clickHandler()" />
	</s:actionContent>
	
	<fx:Declarations>
		<presentation:UsersListPM id="model" />
	</fx:Declarations>
	
	<s:List id="lstUsers" dataProvider="{model.users}" top="10" right="10" bottom="10" left="10">
		<s:itemRenderer>
			<fx:Component>
				<s:MobileIconItemRenderer labelField="name" />
			</fx:Component>
		</s:itemRenderer>
	</s:List>
	
</s:View>
